<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- ================================================= -->
    <!-- ðŸŽ¨ BRAND COLORS -->
    <!-- ================================================= -->

    <!-- Primary -->
    <Color x:Key="PrimaryGreen">#0E7A3E</Color>
    <Color x:Key="PrimaryGreenDark">#0A5A2E</Color>
    <Color x:Key="PrimaryWhite">#FFFFFF</Color>

    <!-- Secondary / Accent -->
    <Color x:Key="AccentGold">#D4AF37</Color>
    <Color x:Key="AccentGoldDark">#B8962E</Color>
    <Color x:Key="AccentBlack">#111111</Color>

    <!-- Neutrals -->
    <Color x:Key="Gray100">#F5F5F5</Color>
    <Color x:Key="Gray200">#E5E5E5</Color>
    <Color x:Key="Gray400">#BDBDBD</Color>
    <Color x:Key="Gray700">#616161</Color>
    <Color x:Key="Gray900">#212121</Color>

    <!-- Backgrounds -->
    <Color x:Key="PageLight">#FFFFFF</Color>
    <Color x:Key="PageDark">#0F0F0F</Color>

    <!-- ================================================= -->
    <!-- ðŸ“± PAGE -->
    <!-- ================================================= -->

    <Style TargetType="Page" ApplyToDerivedTypes="True">
        <Setter Property="Padding" Value="0" />
        <Setter Property="BackgroundColor"
                Value="{AppThemeBinding Light={StaticResource PageLight},
                                         Dark={StaticResource PageDark}}" />
    </Style>

    <!-- ================================================= -->
    <!-- ðŸ§± CARD / BORDER -->
    <!-- ================================================= -->

    <Style TargetType="Border">
        <Setter Property="StrokeShape" Value="RoundRectangle 14" />
        <Setter Property="StrokeThickness" Value="1" />
        <Setter Property="Stroke"
                Value="{AppThemeBinding Light={StaticResource Gray200},
                                         Dark={StaticResource Gray700}}" />
        <Setter Property="BackgroundColor"
                Value="{AppThemeBinding Light={StaticResource PrimaryWhite},
                                         Dark={StaticResource Gray900}}" />
    </Style>

    <!-- ================================================= -->
    <!-- ðŸ“ TEXT -->
    <!-- ================================================= -->

    <Style TargetType="Label">
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource AccentBlack},
                                         Dark={StaticResource PrimaryWhite}}" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style x:Key="TitleLabel" TargetType="Label">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource AccentBlack},
                                         Dark={StaticResource PrimaryWhite}}" />
    </Style>

    <Style x:Key="SubtitleLabel" TargetType="Label">
        <Setter Property="FontSize" Value="13" />
        <Setter Property="TextColor"
                Value="{AppThemeBinding Light={StaticResource Gray700},
                                         Dark={StaticResource Gray400}}" />
    </Style>

    <!-- ================================================= -->
    <!-- ðŸ”˜ BUTTONS -->
    <!-- ================================================= -->

    <!-- Primary Button (Green) -->
    <Style TargetType="Button">
        <Setter Property="BackgroundColor"
                Value="{AppThemeBinding Light={StaticResource PrimaryGreen},
                                         Dark={StaticResource PrimaryGreenDark}}" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="Padding" Value="14,10" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <!-- Accent Button (Gold) -->
    <Style x:Key="GoldButton" TargetType="Button">
        <Setter Property="BackgroundColor"
                Value="{AppThemeBinding Light={StaticResource AccentGold},
                                         Dark={StaticResource AccentGoldDark}}" />
        <Setter Property="TextColor" Value="Black" />
    </Style>

    <!-- ================================================= -->
    <!-- ðŸ”„ LOAD / REFRESH -->
    <!-- ================================================= -->

    <Style TargetType="ActivityIndicator">
        <Setter Property="Color"
                Value="{AppThemeBinding Light={StaticResource PrimaryGreen},
                                         Dark={StaticResource AccentGold}}" />
    </Style>

    <Style TargetType="RefreshView">
        <Setter Property="RefreshColor"
                Value="{AppThemeBinding Light={StaticResource PrimaryGreen},
                                         Dark={StaticResource AccentGold}}" />
    </Style>

    <!-- ================================================= -->
    <!-- ðŸ§­ SHELL / TAB BAR -->
    <!-- ================================================= -->

    <Style TargetType="Shell" ApplyToDerivedTypes="True">
        <Setter Property="Shell.BackgroundColor"
                Value="{AppThemeBinding Light={StaticResource PrimaryWhite},
                                         Dark={StaticResource AccentBlack}}" />

        <Setter Property="Shell.TitleColor"
                Value="{AppThemeBinding Light={StaticResource AccentBlack},
                                         Dark={StaticResource PrimaryWhite}}" />

        <Setter Property="Shell.ForegroundColor"
                Value="{AppThemeBinding Light={StaticResource AccentBlack},
                                         Dark={StaticResource PrimaryWhite}}" />

        <!-- TabBar -->
        <Setter Property="Shell.TabBarBackgroundColor"
                Value="{AppThemeBinding Light={StaticResource PrimaryWhite},
                                         Dark={StaticResource AccentBlack}}" />

        <Setter Property="Shell.TabBarForegroundColor"
                Value="{StaticResource PrimaryGreen}" />

        <Setter Property="Shell.TabBarTitleColor"
                Value="{StaticResource PrimaryGreen}" />

        <Setter Property="Shell.TabBarUnselectedColor"
                Value="{StaticResource Gray400}" />
    </Style>

</ResourceDictionary>
