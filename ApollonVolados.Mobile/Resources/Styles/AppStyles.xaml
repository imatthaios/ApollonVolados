<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- GLOBAL PAGE -->
    <Style TargetType="Page">
        <Setter Property="BackgroundColor"
                Value="{StaticResource White}" />
    </Style>
    
    <Style x:Key="PageTitleLabel" TargetType="Label">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="TextColor"
                    Value="{StaticResource PrimaryGreen}" />
            <Setter Property="HorizontalTextAlignment" Value="Center"/>
    </Style>

    <!-- LABELS -->
    <Style TargetType="Label">
        <Setter Property="TextColor"
                Value="{StaticResource Gray700}" />
        <Setter Property="FontSize" Value="14"/>
    </Style>

    <Style x:Key="TitleLabel" TargetType="Label">
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="TextColor"
                Value="{StaticResource PrimaryGreen}"/>
    </Style>

    <Style x:Key="SmallMutedLabel" TargetType="Label">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="TextColor"
                Value="{StaticResource TextSecondary}"/>
    </Style>

    <!-- BUTTONS -->
    <Style TargetType="Button">
        <Setter Property="BackgroundColor"
                Value="{StaticResource PrimaryGreen}" />
        <Setter Property="TextColor"
                Value="{StaticResource White}" />
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="FontAttributes" Value="Bold"/>
        <Setter Property="Padding" Value="14"/>
    </Style>

    <Style x:Key="SecondaryButton" TargetType="Button">
        <Setter Property="BackgroundColor"
                Value="{StaticResource Gold}" />
        <Setter Property="TextColor"
                Value="{StaticResource Black}" />
    </Style>

    <Style x:Key="OutlineButton" TargetType="Button">
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="TextColor"
                Value="{StaticResource PrimaryGreen}"/>
        <Setter Property="BorderColor"
                Value="{StaticResource PrimaryGreen}"/>
        <Setter Property="BorderWidth" Value="1"/>
    </Style>

    <!-- CARDS -->
    <Style TargetType="Border">
        <Setter Property="BackgroundColor"
                Value="{StaticResource PrimaryGreenSoft}" />
        <Setter Property="Stroke"
                Value="{StaticResource PrimaryGreen}" />
        <Setter Property="StrokeThickness" Value="1"/>
        <Setter Property="StrokeShape"
                Value="RoundRectangle 16"/>
        <Setter Property="Padding" Value="14"/>
    </Style>

    <!-- ACTIVITY INDICATOR -->
    <Style TargetType="ActivityIndicator">
        <Setter Property="Color"
                Value="{StaticResource PrimaryGreen}" />
    </Style>

    <!-- ========================= -->
    <!-- SHELL / TABS / NAV BAR -->
    <!-- ========================= -->
    <Style TargetType="Shell">

            <!-- ΓΕΝΙΚΟ -->
            <Setter Property="Shell.BackgroundColor"
                    Value="{StaticResource White}" />

            <!-- TITLE -->
            <Setter Property="Shell.TitleColor"
                    Value="{StaticResource NavTitle}" />

            <!-- ICONS -->
            <Setter Property="Shell.ForegroundColor"
                    Value="{StaticResource NavIcon}" />

            <!-- TAB BAR -->
            <Setter Property="Shell.TabBarBackgroundColor"
                    Value="{StaticResource White}" />

            <!-- ΕΝΕΡΓΟ TAB -->
            <Setter Property="Shell.TabBarForegroundColor"
                    Value="{StaticResource TabSelected}" />

            <!-- ΑΝΕΝΕΡΓΟ TAB -->
            <Setter Property="Shell.TabBarUnselectedColor"
                    Value="{StaticResource TabUnselected}" />

            <!-- ΧΩΡΙΣ ΣΚΙΑ -->
            <Setter Property="Shell.NavBarHasShadow"
                    Value="False" />

    </Style>

</ResourceDictionary>
