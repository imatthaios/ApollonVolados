<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- BASE -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>

    <!-- APOLLON GREEN -->
    <Color x:Key="PrimaryGreen">#1E6F43</Color>
    <Color x:Key="PrimaryGreenDark">#145233</Color>
    <Color x:Key="PrimaryGreenSoft">#EAF3EE</Color>

    <!-- GOLD -->
    <Color x:Key="Gold">#C9A441</Color>
    <Color x:Key="GoldSoft">#F6EED3</Color>
    
    <!-- GRAYS -->
    <Color x:Key="Gray900">#2A2A2A</Color>
    <Color x:Key="Gray700">#4A4A4A</Color>
    <Color x:Key="Gray600">#6B6B6B</Color>
    <Color x:Key="Gray400">#B5B5B5</Color>
    <Color x:Key="Gray200">#E5E5E5</Color>
    
    <!-- TAB / NAV -->
    <Color x:Key="TabSelected">#1E6F43</Color>     <!-- PrimaryGreen -->
    <Color x:Key="TabUnselected">#6B6B6B</Color>   <!-- Gray600 -->
    <Color x:Key="NavTitle">#1E6F43</Color>
    <Color x:Key="NavIcon">#1E6F43</Color>
    
    <Color x:Key="SecondaryGold">#C9A227</Color>
</ResourceDictionary>