    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ApollonVolados.Mobile.Views"
    x:Class="ApollonVolados.Mobile.AppShell">

    <TabBar>
        <!-- ΝΕΑ -->
        <Tab Title="Νέα" Icon="tab_news.png">
            <ShellContent
                ContentTemplate="{DataTemplate views:NewsPage}" />
        </Tab>

        <!-- ΕΠΙΚΟΙΝΩΝΙΑ -->
        <Tab Title="Επικοινωνία" Icon="tab_contact.png">
            <ShellContent
                ContentTemplate="{DataTemplate views:ContactPage}" />
        </Tab>
    </TabBar>
</Shell>