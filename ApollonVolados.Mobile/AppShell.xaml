<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ApollonVolados.Mobile.Views"
    x:Class="ApollonVolados.Mobile.AppShell"

    Shell.TabBarBackgroundColor="White"
    Shell.TabBarForegroundColor="{StaticResource PrimaryColor}"
    Shell.TabBarTitleColor="{StaticResource PrimaryColor}"
    Shell.TabBarUnselectedColor="#9BBFB1">

    <TabBar>
        <ShellContent Title="Αρχική"
                      Icon="home.svg"
                      ContentTemplate="{DataTemplate views:HomePage}" />

        <ShellContent Title="Δελτία Τύπου"
                      Icon="news.svg"
                      ContentTemplate="{DataTemplate views:NewsPage}" />

        <ShellContent Title="Τμήματα"
                      Icon="matches.svg"
                      ContentTemplate="{DataTemplate views:TeamsPage}" />

        <ShellContent Title="Σύλλογος"
                      Icon="info.svg"
                      ContentTemplate="{DataTemplate views:ClubPage}" />
    </TabBar>
</Shell>