<?xml version="1.0" encoding="utf-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ApollonVolados.Mobile.Views"
    x:Class="ApollonVolados.Mobile.AppShell"
    Shell.NavBarIsVisible="False"
    Shell.TabBarBackgroundColor="{StaticResource BackgroundColor}"
    Shell.TabBarForegroundColor="{StaticResource PrimaryGreen}"
    Shell.TabBarUnselectedColor="#9BBFB1">

    <!-- Splash -->
    <ShellContent
        Route="splash"
        ContentTemplate="{DataTemplate views:AnimatedSplashPage}" />
    
    <TabBar>
        <ShellContent
            Route="home"
            Title="Αρχική"
            Icon="home.png"
            ContentTemplate="{DataTemplate views:HomePage}" />

        <ShellContent
            Title="Νέα"
            Icon="news.png"
            ContentTemplate="{DataTemplate views:NewsPage}" />

        <ShellContent
            Title="Τμήματα"
            Icon="matches.png"
            ContentTemplate="{DataTemplate views:TeamsPage}" />

        <ShellContent
            Title="Σύλλογος"
            Icon="info.png"
            ContentTemplate="{DataTemplate views:ClubPage}" />
    </TabBar>
</Shell>