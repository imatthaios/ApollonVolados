<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ApollonVolados.Mobile.Views.AnimatedSplashPage"
    BackgroundColor="{StaticResource PrimaryGreen}"
    Shell.NavBarIsVisible="False">

    <Grid>

        <!-- SOFT LIGHT OVERLAY -->
        <BoxView
            x:Name="LightOverlay"
            BackgroundColor="White"
            Opacity="0"
        />

        <!-- LOGO CONTAINER -->
        <Border
            x:Name="LogoContainer"
            WidthRequest="210"
            HeightRequest="210"
            StrokeShape="RoundRectangle 105"
            BackgroundColor="White"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            Opacity="0"
            Scale="0.45"
            Rotation="-18">

            <Border.Shadow>
                <Shadow Brush="#66000000" Offset="0,14" Radius="32" />
            </Border.Shadow>

            <Image
                x:Name="Logo"
                Source="apollon_logo.png"
                Aspect="AspectFit"
                Margin="30" />

        </Border>

    </Grid>
</ContentPage>