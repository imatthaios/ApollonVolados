<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ApollonVolados.Mobile.Views.Controls.SkeletonNewsItem">

    <Border
        BackgroundColor="{StaticResource SurfaceColor}"
        Padding="12"
        Margin="0,10"
        StrokeShape="RoundRectangle 14">

        <Border.Shadow>
            <Shadow Brush="#0F000000"
                    Offset="0,2"
                    Radius="6" />
        </Border.Shadow>

        <Grid ColumnDefinitions="90,*"
              ColumnSpacing="12">

            <!-- Image placeholder -->
            <BoxView
                HeightRequest="80"
                WidthRequest="80"
                CornerRadius="10"
                Color="#EDEDED" />

            <!-- Text placeholders -->
            <VerticalStackLayout
                Grid.Column="1"
                Spacing="8">

                <BoxView HeightRequest="16"
                         CornerRadius="4"
                         Color="#EDEDED" />

                <BoxView HeightRequest="16"
                         WidthRequest="160"
                         CornerRadius="4"
                         Color="#EDEDED" />

                <BoxView HeightRequest="12"
                         WidthRequest="80"
                         HorizontalOptions="End"
                         CornerRadius="4"
                         Color="#EDEDED" />
            </VerticalStackLayout>

        </Grid>
    </Border>
</ContentView>